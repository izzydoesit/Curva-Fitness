<div class="well">

    <div class="card">
      <%= image_tag(product.image_url, class: "card-img-top") %>
      <div class="card-body">
        <h4 class="card-title"><%= product.brand %></small></h4>
        <h4 class="card-title"><%= product.name %></small></h4>
        <h4 class="card-text"><%= product.description %></small></h4>
      </div>
    </div>
    <div class="col-xs-4">

      <%= form_for order_item, remote: true do |f| %>
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>

</div>